<input type="hidden" id="movie_id" value="{{movie_id}}">

<iframe width="100%" src="//www.youtube.com/embed/{{youtube_id}}?rel=0" frameborder="0" allowfullscreen></iframe>


{{#if alt}}
<div class="container" style="text-align:center; padding-top:25px;">
	<button class="btn btn-default done-watching" id="1">Hated it</button>
	<button class="btn btn-default done-watching" id="3">Don't care</button>
	<button class="btn btn-default done-watching" id="5">Loved it</button>
</div>
{{else}}
	<button class="btn btn-default done-watching" id="1">★</button>
	<button class="btn btn-default done-watching" id="2">★★</button>
	<button class="btn btn-default done-watching" id="3">★★★</button>
	<button class="btn btn-default done-watching" id="4">★★★★</button>
	<button class="btn btn-default done-watching" id="5">★★★★★</button>
{{/if}}

<div class="container" style="text-align:center; padding-top:25px;">
	<button class="btn btn-default redirect-movie" id="7">Let's watch it!</button>
	<button class="btn btn-default done-watching" id="0">Skip</button>
	<button class="btn btn-default see-ratings" id="0">Ratings</button>
	<h5>Current Genres: {{#if genres}}{{genres}}{{else}}None{{/if}} <a href="/profile">(Edit)</a></h5>
</div>

<div class="container">
	<div class="detail">
		<h1>{{movie_title}}</h1>
		{{#if explain}}{{{explain}}}{{/if}}
	</div>

	<div class="detail">
	</div>

	<div class="detail">
		<h3>Actors</h3>
		<h4 id="actors"></h4>
	</div>

	<div class="detail">
		<h3>Year</h3>
		<h4 id="year"></h4>
	</div>

	<div class="detail">
		<h3>Director</h3>
		<h4 id="director"></h4>
	</div>

	<div class="detail">
		<h3>Genres</h3>
		<h4 id="genres"></h4>
	</div>

	<div class = "detail">
		<h3> </h3>
	</div>
	<script src="js/clip.js"></script>
	<script src="http://omdbapi.com/?i=tt{{movie_id}}&callback=movielookup"></script>