<!doctype html>

<html>
<head>
	<title>My Ratings</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
  <link href="/css/pick.css" rel = "stylesheet">
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,300' rel='stylesheet' type='text/css'>	
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/pick.js"></script>
	<script src="js/bootstrap.min.js"></script>

	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="container">
		<div class="detail">
			<h1>Current Ratings</h1>
		</div>
	{{#each ratings}}
		<div class="container">
			<h3><a href="/clip?film_id={{film_id}}">{{title}}</a></h3>
			<button class="btn btn-default re-rate" id="1.{{film_id}}">{{star 1 film_id}}</button>
			<button class="btn btn-default re-rate" id="2.{{film_id}}">{{star 2 film_id}}</button>
			<button class="btn btn-default re-rate" id="3.{{film_id}}">{{star 3 film_id}}</button>
			<button class="btn btn-default re-rate" id="4.{{film_id}}">{{star 4 film_id}}</button>
			<button class="btn btn-default re-rate" id="5.{{film_id}}">{{star 5 film_id}}</button>
			<br>
			<button class="btn btn-default re-rate" id="0.{{film_id}}">Clear</button>
		</div>
	{{else}}
		<p>You don't have any ratings yet! <a href="/start">Get started.</a></p>
	{{/each}}
	</div>
	<br><br>
	<div class="container">
		<button class="btn btn-default logout">Logout</button>	
	</div>
</body>
</html>


